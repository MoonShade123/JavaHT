                System.out.println("Задача №17:");
                int a[] = { 5, 10, 0, -5, 16, -2 };
                int maxmass = a[0];
                for (int i = 0; i < a.length; i++){
                    System.out.print(a[i]+" ");
                    if (maxmass < a[i])
                        maxmass = a[i];
                }
                System.out.println(" ");
                for(int i=0;i < a.length; i++ ){
                    a[i]=a[i]/maxmass;
                    System.out.print(a[i]+" ");
                }
